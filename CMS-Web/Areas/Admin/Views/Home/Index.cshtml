
@model CMS_DTO.CMSHome.CMSHomeModels
@using CMS_Shared
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var ComInfo = Model.ComInfo;
    if (ComInfo == null)
    {
        ComInfo = new CMS_DTO.CMSCustomer.CompanyModels();
    }
}
@{
    ViewBag.Title = "Trang chủ";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .fa {
            padding: 20px;
            font-size: 30px;
            width: 50px;
            text-align: center;
            text-decoration: none;
            margin: 5px 2px;
        }

        .fa:hover {
            opacity: 0.7;
        }

        .fa-facebook {
            background: #3B5998;
            color: white;
        }

        .fa-twitter {
            background: #55ACEE;
            color: white;
        }

        .fa-instagram {
            background: #125688;
            color: white;
        }



    </style>
</head>
<div role="main">
    <div class="se-pre-con" style="display: none;"></div>
    <div class="_gridview">
        <div class="page-main">
            <div id="div-silder">
                <fieldset>
                    <legend>SILDER (900 X 450)</legend>
                    <div class="row text-right" style="margin-right:0px !important">
                        <ul class="header-buttons pull-right list-inline">
                            <li>
                                <a href="javascript:void(0);" class="btn btn-success" id="btn-edit-save" onclick="SubmitFormSilder('#form-create-silder')">
                                    <i class="fa fa-save"></i>
                                    &nbsp;Lưu
                                </a>
                            </li>
                        </ul>
                    </div>
                    @using (@Html.BeginForm("UploadSilder", "Home", FormMethod.Post, new { @id = "form-create-silder", @class = "form-horizontal", @enctype = "multipart/form-data" }))
                    {
                        <div class="form-group">
                            <div class="col-md-6" style="margin-bottom:10px">
                                <div class="input-group">
                                    @Html.TextBoxFor(model => model.Silder.PictureUpload1, new { @type = "file", @onchange = "preview_image(this,\"upload-preview-1\")", @accept = "*.jpg", @class = "hidden", @id = "upload-preview-1" })
                                    @Html.HiddenFor(model => model.Silder.ImageURL1)
                                    <input type="text" class="form-control upload-preview-1" placeholder="Chọn hình..." value="@Model.Silder.ImageURL1">
                                    <span class="input-group-addon btn green" onclick="showPictureUpload('#upload-preview-1');">
                                        <i class="fa fa-cloud-upload"></i>
                                    </span>
                                </div>
                            </div>

                            <div class="col-md-6" style="margin-bottom:10px">
                                <div class="input-group">
                                    @Html.TextBoxFor(model => model.Silder.PictureUpload2, new { @type = "file", @onchange = "preview_image(this,\"upload-preview-2\")", @accept = "*.jpg", @class = "hidden", @id = "upload-preview-2" })
                                    @Html.HiddenFor(model => model.Silder.ImageURL2)
                                    <input type="text" class="form-control upload-preview-2" placeholder="Chọn hình..." value="@Model.Silder.ImageURL2">
                                    <span class="input-group-addon btn green" onclick="showPictureUpload('#upload-preview-2');">
                                        <i class="fa fa-cloud-upload"></i>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-6" style="margin-bottom:10px">
                                <div class="input-group">
                                    @Html.TextBoxFor(model => model.Silder.PictureUpload3, new { @type = "file", @onchange = "preview_image(this,\"upload-preview-3\")", @accept = "*.jpg", @class = "hidden", @id = "upload-preview-3" })
                                    @Html.HiddenFor(model => model.Silder.ImageURL3)
                                    <input type="text" class="form-control upload-preview-3" placeholder="Chọn hình..." value="@Model.Silder.ImageURL3">
                                    <span class="input-group-addon btn green" onclick="showPictureUpload('#upload-preview-3');">
                                        <i class="fa fa-cloud-upload"></i>
                                    </span>
                                </div>
                            </div>

                            <div class="col-md-6" style="margin-bottom:10px">
                                <div class="input-group">
                                    @Html.TextBoxFor(model => model.Silder.PictureUpload4, new { @type = "file", @onchange = "preview_image(this,\"upload-preview-4\")", @accept = "*.jpg", @class = "hidden", @id = "upload-preview-4" })
                                    @Html.HiddenFor(model => model.Silder.ImageURL4)
                                    <input type="text" class="form-control upload-preview-4" placeholder="Chọn hình..." value="@Model.Silder.ImageURL4">
                                    <span class="input-group-addon btn green" onclick="showPictureUpload('#upload-preview-4');">
                                        <i class="fa fa-cloud-upload"></i>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-6" style="margin-bottom:10px">
                                <div class="input-group">
                                    @Html.TextBoxFor(model => model.Silder.PictureUpload5, new { @type = "file", @onchange = "preview_image(this,\"upload-preview-5\")", @accept = "*.jpg", @class = "hidden", @id = "upload-preview-5" })
                                    @Html.HiddenFor(model => model.Silder.ImageURL5)
                                    <input type="text" class="form-control upload-preview-5" placeholder="Chọn hình..." value="@Model.Silder.ImageURL5">
                                    <span class="input-group-addon btn green" onclick="showPictureUpload('#upload-preview-5');">
                                        <i class="fa fa-cloud-upload"></i>
                                    </span>
                                </div>
                            </div>

                            <div class="col-md-6" style="margin-bottom:10px">
                                <div class="input-group">
                                    @Html.TextBoxFor(model => model.Silder.PictureUpload6, new { @type = "file", @onchange = "preview_image(this,\"upload-preview-6\")", @accept = "*.jpg", @class = "hidden", @id = "upload-preview-6" })
                                    @Html.HiddenFor(model => model.Silder.ImageURL6)
                                    <input type="text" class="form-control upload-preview-6" placeholder="Chọn hình..." value="@Model.Silder.ImageURL6">
                                    <span class="input-group-addon btn green" onclick="showPictureUpload('#upload-preview-6');">
                                        <i class="fa fa-cloud-upload"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    }

                </fieldset>

                <fieldset style="margin-top:30px">
                    <div class="box-body" style="display: block;">
                        <div class="row form-horizontal form-label-left" style="margin-bottom:15px;">
                            <fieldset>
                                <legend>THÔNG TIN CÔNG TY</legend>

                                <div class="form-group">
                                    <label class="control-label col-md-2 col-sm-2 col-xs-12 lineHeight fontLighter">Avartar</label>
                                    <div class="col-md-2 col-sm-2 col-xs-12">
                                        @if (!string.IsNullOrEmpty(ComInfo.ImageURL))
                                        {
                                            <img id="upload-preview" src="@ComInfo.ImageURL" height="100" width="100" class="" style="border-radius:100% !important" />
                                        }
                                        else
                                        {
                                            <img id="upload-preview" class="" src="@Commons.Image200_100" height="100" width="100" style="border-radius:100% !important" />
                                        }
                                    </div>
                                    <div class="col-md-1 col-sm-3 col-xs-12" style="line-height:55px;">
                                        <div class="upload-btn-wrapper" style="cursor:pointer;">
                                            <button class="btn btn-default" type="button" onclick="showPictureUpload();" style="margin-top:-6%;margin-left:50px">Chọn hình</button>
                                            @Html.TextBoxFor(model => model.ComInfo.PictureUpload, new { @type = "file", @onchange = "PreviewImage(this,\"upload-preview\")", @accept = "*.jpg", @class = "hidden", @id = "urlImage" })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.ComInfo.PictureUpload, null, new { @class = "label label-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2 col-sm-2 col-xs-12 fontLighter">Tên công ty:</label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <label style="margin-top:1%">@ComInfo.Name</label>
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label class="control-label col-md-2 col-sm-2 col-xs-12 fontLighter">Mô tả:</label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <label style="margin-top:1%">@ComInfo.Description</label>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2 col-sm-2 col-xs-12 fontLighter">Email:</label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <label style="margin-top:1%">@ComInfo.Email</label>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label class="control-label col-md-2 col-sm-2 col-xs-12 fontLighter">Phone:</label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <label style="margin-top:1%">@ComInfo.Phone</label>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label class="control-label col-md-2 col-sm-2 col-xs-12 fontLighter">Địa chỉ:</label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <label style="margin-top:1%">@ComInfo.Address</label>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2 col-sm-2 col-xs-12 fontLighter">Mạng xã hội: </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <label style="margin-top:1%">
                                            <a href="@ComInfo.LinkFB" class="fa fa-facebook"></a>
                                            <a href="@ComInfo.LinkTwiter" class="fa fa-twitter"></a>
                                            <a href="@ComInfo.LinkInstagram" class="fa fa-instagram"></a>
                                        </label>
                                    </div>
                                </div>

                            </fieldset>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    function preview_image(that, _attr) {
        var _Files = document.getElementById(_attr).files[0];
        var _FileName = _Files.name;
        $("." + _attr + "").val(_FileName);
    }

    function showPictureUpload(that) {
        $(that).click();
    }

    function SubmitFormSilder(form) {
        $(form).submit();
    }

    function showPictureUpload() {
        $('[id=urlImage]').click();
    }
</script>