@{
    Layout = "~/Areas/Clients/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Giới thiệu";
}
@model CMS_DTO.CMSProduct.ProductViewModels
<style>
</style>

<!DOCTYPE html>
<html>
<body>
    <!-- Breadcrumb Area Start-->
    @Html.Partial("_breadcrumb", new Dictionary<string, string> { { "A", "Trang chủ" }, { "B", "Giới thiệu" } })
    <!-- Breadcrumb Area End -->
    <!-- Contact Info Map Area Start -->
    <!-- Team Area Start -->
    <section class="team-area ptb-100">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="section-title text-center">
                        <h1>Thành viên chúng tôi</h1>
                        <span><img src="@Url.Content("~/Images/banner/koffee.png")" alt=""></span>
                        <p>Bạn có thể tìm hiểu được tất cả các thức uống mà bạn muốn khi bạn liên hệ trực tiếp tới các thành viên của công ty. </p>
                    </div>
                </div>
            </div>
            <div class="row">
                @if (Model.ListEmployee != null && Model.ListEmployee.Any())
                {
                    foreach (var item in Model.ListEmployee)
                    {
                        <div class="col-md-3 col-sm-4">
                            <div class="single-team">
                                <a href="#"><img src="@Url.Content(item.ImageURL)" alt=""></a>
                                <div class="team-text text-center">
                                    <h4><a href="#">@item.FullName</a></h4>
                                    @* <h5>Senior Accountants</h5>*@
                                    <div class="team-links">
                                        <a href="javascript:void(0)"><i class="zmdi zmdi-facebook"></i></a>
                                        <a href="javascript:void(0)"><i class="zmdi zmdi-twitter"></i></a>
                                        <a href="javascript:void(0)"><i class="zmdi zmdi-dribbble"></i></a>
                                        <a href="javascript:void(0)"><i class="zmdi zmdi-pinterest"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </section>
    <!-- Team Area End -->
</body>
</html>

<script type="text/javascript">
    $(document).ready(function () {

    })
</script>
