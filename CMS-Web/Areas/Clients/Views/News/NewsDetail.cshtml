@{
    Layout = "~/Areas/Clients/Views/Shared/_Layout.cshtml";
}
@model CMS_DTO.CMSNews.CMS_NewsViewModel

<!-- Breadcrumb Area Start-->
@Html.Partial("_breadcrumb", new Dictionary<string, string> { { "A", "Tin tức" }, { "B", "Chi tiết" } })
<!-- Breadcrumb Area End -->

<!-- Blog Deatils Area Start -->
<section class="blog-details-area ptb-100 blog-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 col-md-8">
                @if (Model.CMS_News != null)
                {
                    var itemDetail = Model.CMS_News;
                    <img src="@itemDetail.ImageURL" alt="">
                    <h4 class="details-title">@itemDetail.Title</h4>
                    <h5 class="details-title">@itemDetail.Short_Description</h5>
                    <div class="post-information">
                        <a href="#">@itemDetail.CreatedDate.ToString("MM/dd/yyyy")</a>
                        @*<a href="#">Comments (60)</a>*@
                    </div>

                    <div class="social-links fix">
                        <a href="#"><i class="zmdi zmdi-facebook"></i></a>
                        <a href="#"><i class="zmdi zmdi-google-plus"></i></a>
                        <a href="#"><i class="zmdi zmdi-twitter"></i></a>
                        <a href="#"><i class="zmdi zmdi-pinterest"></i></a>
                        <a href="#"><i class="zmdi zmdi-linkedin"></i></a>
                    </div>
                }
            </div>
            <div class="col-lg-3 col-md-4">
                <div class="widget">
                    <form action="#" method="post">
                        <div class="search-box">
                            <input type="text" placeholder="Tìm kiếm . . . .">
                            <button type="button"><i class="zmdi zmdi-search"></i></button>
                        </div>
                    </form>
                </div>
                <div class="single-widget">
                    <h4>Thể loại</h4>
                    <ul>
                        @if (Model.ListCate != null && Model.ListCate.Any())
                        {
                            foreach (var item in Model.ListCate)
                            {
                                <li>
                                    <a href="@Url.Action("CategoriesDetail", "Menus", new { id=item.Id })"><i class="zmdi zmdi-caret-left"></i>@string.Format("{0}", (item.CategoryName.Length > 25) ? (item.CategoryName.Substring(0, 25) + "...") : item.CategoryName)</a>
                                </li>
                            }
                        }
                    </ul>
                    </div>
                <div class="single-widget">
                    <h4>Tin tức mới</h4>
                    @if (Model.ListNewsNew != null && Model.ListNewsNew.Any())
                    {
                        foreach (var item in Model.ListNewsNew)
                        {
                            <div class="recent-item">
                                <a href="@Url.Action("NewsDetail", "News", new { id=item.Id })"><img src="@item.ImageURL" alt="@item.Title"></a>
                                <div class="recent-text">
                                    <h5><a href="blog.html">@string.Format("{0}", (item.Title.Length > 25) ? (item.Title.Substring(0, 25) + "...") : item.Title)</a></h5>
                                    <div class="recent-info">
                                        <a href="#">@Html.Raw(item.CreatedBy)</a>
                                        <a href="#"><i class="zmdi zmdi-comments"></i>1</a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
                <div class="single-widget">
                    <h4>Phổ biến</h4>
                    <div class="tags">
                        <ul>
                            @if (Model.ListProduct != null && Model.ListProduct.Any())
                            {
                                foreach (var item in Model.ListProduct)
                                {
                                    <li>
                                        <a href="@Url.Action("Index", "Menus")"><img src="@item.ImageURL" alt="@item.ProductName"></a>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>                
            </div>
        </div>
    </div>
</section>
<!-- Blog Deatils Area End -->

<script type="text/javascript">
</script>


