<!-- Blog Area Start -->
<section class="blog-area ptb-100">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="section-title text-center">
                    <h1>Tin tức hàng ngày</h1>
                    <span><img src="@Url.Content("~/Images/banner/koffee.png")" alt=""></span>
                    <p>Bạn có thể tìm hiểu được tất cả các thức uống mà bạn muốn khi bạn thường xuyên theo dõi cập nhập tin tức từ trang web của chúng tôi.</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="blog-carousel">
                @if (Model.ListNews != null && Model.ListNews.Any())
                {
                    foreach (var item in Model.ListNews)
                    {
                        <div class="col-xs-12">
                            <div class="single-blog">
                                <a href="@Url.Action("NewsDetail", "News", new {id=item.Id })" class="blog-image">
                                    @if (string.IsNullOrEmpty(item.ImageURL))
                                    {
                                        <img src="@Url.Content("~/Images/banner/1.jpg")" alt="">
                                    }
                                    else
                                    {
                                        <img src="@Url.Content(item.ImageURL)" alt="">
                                    }
                                </a>
                                <div class="blog-text text-center">
                                    <span>@item.CreatedDate.ToString("dd/MM/yyyy")</span>
                                    <h4><a href="@Url.Action("NewsDetail", "News", new {id=item.Id })">@item.Title</a></h4>
                                    <p>@item.Short_Description</p>
                                    <a href="@Url.Action("NewsDetail", "News", new {id=item.Id })">Xem Thêm</a>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>
<!-- Blog Area End -->