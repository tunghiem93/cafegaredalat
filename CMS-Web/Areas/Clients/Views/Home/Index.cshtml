@{
    Layout = "~/Areas/Clients/Views/Shared/_Layout.cshtml";
}
@model CMS_DTO.CMSProduct.ProductViewModels

<script type="text/javascript">
    function ShowView(url) {
        ShowViewOrEdit(url);
        return false;
    }

    function ShowViewOrEdit(action) {
        $.ajax({
            url: action,
            beforeSend: function () {
                $("#loading-mask").show();
            },
            error: function (jqXHR, textStatus, errorThrown) {
                alert(errorThrown);
            },
            complete: function () {
                $("#loading-mask").hide();
            },
            success: function (html) {
               // $(".se-pre-con").hide();
                ShowDetail(html);
            }
        });
    }

    $(document).ready(function () {
    })
</script>