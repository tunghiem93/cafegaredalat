@{
    Layout = "~/Areas/Clients/Views/Shared/_Layout.cshtml";
}
@model CMS_DTO.CMSProduct.ProductViewModels
@{ 
    var _ListSlider = Session["SliderSession"] as List<CMS_DTO.CMSSession.SliderSession>;
}
<!-- Background Area Start -->
<section class="slider-area">
    <div class="slider-wrapper">
        @if (_ListSlider != null && _ListSlider.Any())
        {
            foreach (var item in _ListSlider)
            {
                <div class="single-slide" style="background-image: url('@Url.Content(item.ImageUrl)');">
                    <div class="banner-content">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                                    <div class="text-content-wrapper">
                                        <div class="text-content text-center">
                                            <h3 class="pt-70">Cà phê Hồ Xuân Sơn kính chào!</h3>
                                            <h1>Cuộc sống và năng lượng của bạn</h1>
                                            <p>Bạn có thể khám phá được tất cả các đồ uống Cà phê mà bạn muốn khi truy cập tới website của chúng tôi.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</section>
<!-- Background Area End -->

<!-- Contact Info Start -->
@if (Model.Company != null)
{
    <section class="contact-area fix pb-30">
        <div class="single-contact">
            <div class="information text-center">
                <h4><span>Điện thoại : </span>@Model.Company.Phone</h4>
            </div>
        </div>
        <div class="single-contact">
            <div class="information text-center">
                <h4><span>Email :</span>@Model.Company.Email</h4>
            </div>
        </div>
        <div class="single-contact">
            <div class="information text-center">
                <h4 title="@Model.Company.Address"><span>Địa chỉ :</span>@string.Format("{0}",!string.IsNullOrEmpty(Model.Company.Address) && Model.Company.Address.Length > 26 ? Model.Company.Address.Substring(0,25) + "..." : Model.Company.Address)</h4>
            </div>
        </div>
        <div class="single-contact">
            <div class="information text-center">
                <h4><span>Giờ mở cửa :</span>@Model.Company.Businesshour</h4>
            </div>
        </div>
    </section>
}

<!-- Contact Info End -->

<!-- About Area Start -->
<section class="about-area pt-70 pb-100">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <div class="about-container">
                    <div class="about-text">
                        <h3>Hồ Xuân Sơn Coffee</h3>
                        <p>
                            Công ty TNHH Cà phê Hồ Xuân Sơn tiếng Anh ( Xuanson lake coffee ,.LTD ) có trụ sở tại thôn xuân sơn xã xuân trường TP Đà Lạt tỉnh Lâm đồng. Cty hoạt động chủ yếu trong lĩnh vực trồng và chế biến Cà phê Arabica, MoKa, Typica tại thung lũng hồ thủy lợi tự nhiên thuộc thôn Xuân Sơn xã Xuân trường TP Đà Lạt. Cty có cửa hàng trưng bày sản phẩm tại nhà ga cổ Đà Lạt 01 Quang Trung tp Đà Lạt và các cửa hàng bán sản phẩm ở Sài gòn và Hà Nội.
                        </p>
                        <p>Tiêu chí của Cty là đưa café Arabica thơm, tinh túy của xứ Cầu đất Đà Lạt đến tay người tiêu dùng ở các vùng nông thôn Việt Nam, cung cấp café nhân sạch cho các nhà sản xuất và chế biến café nguyên chất.</p>
                        @*<a href="javascript:void(0)" class="default-btn"><span>Xem thêm</span></a>*@
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 hidden-xs">
                <div class="about-image">
                    <img src="@Url.Content("~/Images/banner/aboutUs.jpg")" style="width:80% !important" />
                </div>
            </div>
        </div>
    </div>
</section>
<!-- About Area End -->

<!-- Special Area Strat -->
<section class="special-area bg-light ptb-100">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="section-title text-center">
                    <h1>Coffee đặc biệt</h1>
                    <span><img src="@Url.Content("~/Images/banner/koffee.png")" alt=""></span>
                    <p>Bạn có thể khám phá được tất cả các đồ uống Cà phê mà bạn muốn khi truy cập tới website của chúng tôi.</p>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        @if (Model != null && Model.ListCate != null && Model.ListCate.Any())
        {
            foreach (var item in Model.ListCate)
            {
                <div class="special-item">
                    <div class="item-content">
                        @if (string.IsNullOrEmpty(item.ImageURL))
                        {
                            <img src="@Url.Content("~/Images/banner/1.jpg")" alt="">
                        }
                        else
                        {
                            <img src="@Url.Content(item.ImageURL)" alt="">
                        }
                        
                        <div class="item-hover text-center">
                            <div class="hover-text">
                                <h1><a href="@Url.Action("Index","Product",new { id=item.Id})">@string.Format("{0}", (item.CategoryName.Length > 18) ? (item.CategoryName.Substring(0, 18) + "...") : item.CategoryName)</a></h1>
                                <p>@Html.Raw(item.Description)</p>
                               @* <span class="price">$20.00</span>*@
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</section>
<!-- Special Area End -->

<!-- Advertise Area Start -->
<section class="advertise-area bg-1 ptb-100 overlay-1">
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="advertise-text text-center">
                    <h1>Bắt đầu ngày mới với mục tiêu của bạn</h1>
                    <p>Thưởng thức những sản phẩm mang đúng thương hiệu cà phê Đà Lạt mà chúng tôi mang đến cho bạn.</p>
