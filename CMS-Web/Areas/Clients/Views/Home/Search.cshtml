@model CMS_DTO.CMSProduct.ProductViewModels
@using CMS_Shared;
@{
    Layout = "~/Areas/Clients/Views/Shared/_Layout.cshtml";
}
		<!-- Breadcrumb Area Start-->
<section class="breadcrumb-area overlay-2 bg-4">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="breadcrumb-text">
                    <h3>Our Menu</h3>
                    <div class="breadcrumb-bar">
                        <ul class="breadcrumb">
                            <li><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                            <li>Sản phẩm</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Area End -->
<!-- Menu Area Start -->
<section class="menu-area ptb-100 menu-section">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="section-title text-center">
                    <h1>Our Menu</h1>
                    <span><img src="@Url.Content("~/Images/banner/koffee.png")" alt=""></span>
                    <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since. </p>
                </div>
            </div>
        </div>
        <div class="row">
            @if (Model.ListProduct != null && Model.ListProduct.Any())
            {
                foreach (var item in Model.ListProduct)
                {
                    <div class="col-md-3 col-sm-4">
                        <div class="single-menu text-center">
                            <div class="menu-image">
                                <span>@item.ProductPrice</span>
                                <a href="javascript:void(0)">
                                    @if (string.IsNullOrEmpty(item.ImageURL))
                                    {
                                        <img src="@Url.Content("~/Images/banner/s-1.jpg")" />
                                    }
                                    else
                                    {
                                        <img src="@Url.Content(item.ImageURL)" alt="">
                                    }
                                </a>
                            </div>
                            <h4><a href="javascript:void(0)">@item.ProductName</a></h4>
                            <span>@Html.Raw(item.Description) </span>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>
<!-- Menu Area End -->

<script type="text/javascript">
        $(document).ready(function () {
            
        })
</script>